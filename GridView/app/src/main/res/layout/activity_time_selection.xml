<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/myLayout" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TimeSelection">

    <Button
        android:id="@+id/btnDateTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="DateTimePicker"
         />

    <Button
        android:id="@+id/btnShowDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show TimePicker"
        />

    <Button
        android:id="@+id/btnChronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Chronometer"
       />

    <Button
        android:id="@+id/btnAnalogLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Analog Clock"
        />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="173dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="83dp"
        android:text="TextView"
         />
</LinearLayout>